# Template build file for 'font-bh-75dpi'.
pkgname=font-bh-75dpi
version=1.0.3
revision=4
noarch="yes"
build_style=gnu-configure
hostmakedepends="pkg-config bdftopcf font-util"
makedepends="font-util"
depends="font-util"
font_dirs="/usr/share/fonts/X11/75dpi"
