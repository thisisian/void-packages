geos-devel_package() {
	depends="${makedepends} ${sourcepkg}-${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/libgeos.a"
		vmove "usr/lib/libgeos.so"
	    vmove "usr/lib/libgeos_c.a"
		vmove "usr/lib/libgeos_c.so"
	}
}
