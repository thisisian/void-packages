# Template file for 'libsass'
pkgname=libsass
version=3.4.6
revision=1
build_style=gnu-configure
hostmakedepends="automake libtool"
short_desc="C implementation of Sass CSS preprocessor"
maintainer="Gerardo Di Iorio <arete74@gmail.com>"
homepage="http://libsass.org/"
license="MIT"
distfiles="https://github.com/sass/${pkgname}/archive/${version}.tar.gz"
checksum=686bc09cc31bba32915f42a6da5e7d221c07690d4d597e2748cdd02abd3d7c2c

pre_configure() {
	autoreconf  -i
}


post_install() {
	vlicense LICENSE
}

libsass-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.so"
		vmove "usr/lib/*.a"
		vmove usr/lib/pkgconfig
	}
}
