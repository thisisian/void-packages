# Template file for 'bftpd'
pkgname=bftpd
version=4.8
revision=1
wrksrc="$pkgname"
build_style=gnu-configure
configure_args="--enable-libz"
makedepends="zlib-devel"
short_desc="A simple FTP server"
maintainer="Norbert Vegh <vegh@norvegh.com>"
license="GPL-2"
homepage="http://bftpd.sourceforge.net/"
checksum=0c80399b0cbdd24c882d59c39b4bd5233fe1a153f5d92f23e3a9496ea4549afe
distfiles="${SOURCEFORGE_SITE}/bftpd/bftpd-${version}.tar.gz"

pre_build() {
	sed -i "s|LDFLAGS=$|LDFLAGS=${LDFLAGS}|" Makefile
}

do_install() {
	sed -i 's,sbin,bin,g' Makefile
	make PREFIX=/usr DESTDIR=${DESTDIR} install
	vsv bftpd
	vconf bftpd.conf
}
