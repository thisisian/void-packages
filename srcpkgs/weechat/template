	lib32disabled=yes
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - tcl plugin"
	pkg_install() {
		vmove usr/lib/weechat/plugins/tcl.so
	}
}
weechat-lua_package() {
	lib32disabled=yes
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - lua plugin"
	pkg_install() {
		vmove usr/lib/weechat/plugins/lua.so
	}
}
