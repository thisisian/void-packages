checksum=585f1ad1be9e9ae00f81998fddef9c1970057dad4b18abef8999f1214c221b2b
replaces="yaml>=0"

do_check() {
	go test -v
}

post_install() {
	# this came after yq 'the jq wrapper for yaml' so yq has the right tp
	# /usr/bin/yq, rename it to yq-go
	mv -v "${DESTDIR}"/usr/bin/{yq,yq-go}

	vlicense LICENSE
}
